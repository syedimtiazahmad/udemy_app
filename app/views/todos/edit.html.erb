<h1>show todos</h1>
<% if @todo.errors.any?%>
<h1>The following error prevented the todo from being save</h1>
	<ul>
		<% @todo.errors.full_messages.each do |msg|%>
			<li><%= msg %></li>
		<%end%>
	</ul>
<%end%>
<%= form_for @todo do |f| %>
 <p>
 	<%= f.label :name %><br>
 	<%= f.text_field :name %>
 </p>
 <p>
 	<%= f.label :description %><br>
 	<%= f.text_area :description%>
 </p>
 <p>
 	<%= f.submit %>
 </p>
<%end%>