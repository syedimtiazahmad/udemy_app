<h1>listing all todos</h1>

<table>
	<%= link_to "Create New Todo", new_todo_path%>
	<tr>
		<th>Name </th>
		<th>Descriptionn</th>
	</tr>
		<% @todos.each do |todo|%>
	<tr>
		<td><%= todo.name%></td>
		<td><%= todo.description%></td>
		<td><%= link_to "Show", todo_path(todo)%></td>
		<td><%= link_to "Edit", edit_todo_path(todo)%></td>
		<td><%= link_to 'Destroy', todo_path(todo), method: :delete, data: { confirm: 'Are you sure?' } %></td>


	</tr>
<%end%>


</table>